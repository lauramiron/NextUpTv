<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NextUpTv" >
        <activity
            android:name="io.github.lauramiron.nextuptv.MainActivity"
            android:banner="@drawable/app_icon_your_company"
            android:exported="true"
            android:launchMode="singleTask"
            android:icon="@drawable/app_icon_your_company"
            android:label="@string/app_name"
            android:logo="@drawable/app_icon_your_company"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.lauramiron.nextuptv.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="io.github.lauramiron.nextuptv.PlaybackActivity"
            android:exported="false" />
        <activity
            android:name="io.github.lauramiron.nextuptv.BrowseErrorActivity"
            android:exported="false" />
    </application>

    <queries>
        <!-- Discover TV-launchable apps -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
        </intent>

        <!-- Optional fallback: phone-style launchers (rare on TV, but just in case) -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>
</manifest>